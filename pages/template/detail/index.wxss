/* pages/template/detail/index.wxss */

.trump {
  position: relative;
  width: 100%;
  height: 100%;
}

.PicBg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

.PicBg image {
  width: 100%;
  height: 100%;
  filter: blur(15px);
}

.title {
  width: 100%;
  text-align: center;
  color: #fff;
  margin: 10px 0 40px 0;
  position: relative;
  z-index: 10;
}

.content {
  z-index: 10;
  position: relative;
  width: 100%;
  height: 500px;
}

.content swiper {
  height: 100%;
}

.content swiper .swiper-item {
  text-align: center;
  position: relative;
  height: 80%;
  width: 80%;
  margin: 0 auto;
}

.content swiper .swiper-item .contMess {
  position: absolute;
  bottom: 0px;
  left: 0px;
  width: 100%;
  color: #fff;
  font-size: 13px;
  text-align: left;
  background-color: #f3be26;
  border-radius: 6px 6px 6px 6px;
  padding: 5px 0;
  text-indent: 5px;
}

.content swiper .swiper-item .contMess text {
  display: block;
  margin-top: 5px;
}

.content swiper .swiper-item image {
  width: 100%;
  height: 80%;
  border-radius: 5px;
}

.content swiper .swiper-item .contMess .Mess2 {
  font-size: 12px;
  color: #888;
}

.discover-image-two {
  height: 320px;
}

.top-text{
  display: flex;
  justify-content: space-between;
}
.pointDate{
  margin-right: 10px;
}
.img-type {
  height: 30px;
  width: 30px;
}

.survey-bg {
  background-color: #f3be26;
  height: auto;
  width: 100%;
  margin-left: 10px;
  margin-right: 10px;
  border-radius: 6px 6px 6px 6px;
}

.item-bg {
  display: flex;
  background-color: #fdf2d4;
  padding: 10px;
  color: #666;
  align-items: center;
  margin: 10px;
  border-radius: 6px 6px 6px 6px;
}

.link-title {
  display: flex;
}
